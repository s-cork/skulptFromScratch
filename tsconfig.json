{
    "compilerOptions": {
        // "module": "commonjs",
        "target": "ESNext",
        "lib": ["DOM", "ES2020.BigInt", "ES2020", "ESNext"],
        "jsx": "preserve",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "watch": true
    },
    "files": [
        "main.ts",
      ],
    "include": ["types","src/*.ts", "src/parser", "src/objects/*.ts", "abstract", "src/utils/*.ts"],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
